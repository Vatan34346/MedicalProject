<%-include('../partials/header.ejs')%>
<main>
   <% if(newDoc.length>0){%>
   <%newDoc.forEach(newDoc =>{%>
   <div>     
      <div class="card">
          <div class="thumbnail"><img class="left" src="<%=newDoc.Image%>" /></div>
          <div class="right">
              <h1><%=newDoc.username%></h1>
              <div class="author"><img src="<%=newDoc.Image%>" />
                  <h2><%=newDoc.Mail%></h2>
              </div>
              <div class="separator"></div>
              <p><%=newDoc.About%></p>
          </div>
          <div class="fab"><a href="/Doctors/doctors/<%=newDoc.id%>"><i class="fa fa-arrow-down fa-3x"></i></a></div>
      </div>
      <%if(isLogged===true){%>
      <form action="/Doctors/doctors/<%=newDoc.id%>?_method=DELETE" method="POST">
        <button type="submit">delete</button>
     </form>
     <%}%>
  </div>
  <% })%>
  <%}%>
</main>

<%-include('../partials/foother.ejs')%>